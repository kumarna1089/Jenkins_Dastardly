pipeline {
    agent any
    stages {
	stage ("Clean Up") {
            steps {     
                sh '''
             docker stop owasp
             docker rm owasp
         '''
            } 
        }
        stage ("ZAP container image Pull") {
            steps {
		docker exec owasp mkdir /zap/wrk
                sh 'docker pull ghcr.io/zaproxy/zaproxy:stable'
		sh 'docker run -dt --name owasp ghcr.io/zaproxy/zaproxy:stable /bin/bash'
            }
        }
        stage ("ZAP Scan") {
            steps {     
                sh '''
                     docker exec owasp \
                     zap-full-scan.py \
                     -t https://ginandjuice.shop \
		     -r ${WORKSPACE}/ZAPreport.html \
                     -I
                 '''
            } 
        }
    }
}
